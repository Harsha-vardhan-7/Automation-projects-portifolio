<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="INFO">

<Properties>
	<Property name= "basePath">./logs</Property>			<!-- basePath is a variable name and we can mention any name, but we should give the same name in""RollingFile Filename and filepattern-->
 </Properties>

<Appenders>
    <Console name="Console" target= "SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    
 	<RollingFile name="File" fileName="${basePath}/automation.log" filePattern="${basePath}/automation-%d{yyyy - MM - dd}.log">
		<PatternLayout pattern="%d{HH:mm:ss.SSS) [%t] %-5level %logger{36} - %msg%n"/>
		<SizeBasedTriggeringPolicy size="50000"/>		<!-- This is the size of the file and if it exceeds, it will create a new file -->
	</RollingFile>
</Appenders>
 
<Loggers>
    <Root level="INFO"> 	<!-- Here you can use multiple log levels All< Trace < Debug < Info < Warn < Error < Fatal -->
  				 <!-- <AppenderRef ref="Console" /> --> <!-- If we want to generate the logs both in console and in a file, then we will activate this statement -->   
      <AppenderRef ref="File"/>
    </Root>
</Loggers>

</Configuration>